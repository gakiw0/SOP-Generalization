{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "configs/rules/schema/v2.json",
  "title": "CASA Rule Set Schema (v2)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "rule_set_id",
    "metric_profile",
    "metadata",
    "inputs",
    "globals",
    "phases",
    "rules"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Semantic version of this schema definition.",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "rule_set_id": {
      "type": "string",
      "minLength": 1,
      "description": "Identifier for this rule set (stable across minor edits)."
    },
    "metric_profile": {
      "$ref": "#/$defs/metric_profile"
    },
    "sport": {
      "type": "string",
      "minLength": 1,
      "description": "Optional metadata sport label (not used for runtime capability resolution)."
    },
    "sport_version": {
      "type": "string",
      "description": "Optional metadata sport ruleset version.",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "inputs": {
      "$ref": "#/$defs/inputs"
    },
    "globals": {
      "$ref": "#/$defs/globals"
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/phase"
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/rule"
      }
    }
  },
  "$defs": {
    "metric_profile": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "metric_space"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["generic", "preset"]
        },
        "preset_id": {
          "type": "string",
          "minLength": 1
        },
        "metric_space": {
          "type": "string",
          "const": "core_v1"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "preset"
              }
            },
            "required": ["type"]
          },
          "then": {
            "required": ["preset_id"]
          }
        }
      ]
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "changelog": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["version", "date", "changes"],
            "properties": {
              "version": {
                "type": "string"
              },
              "date": {
                "type": "string",
                "format": "date-time"
              },
              "changes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "parity_checks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expected_fps": {
          "type": "number",
          "minimum": 0
        },
        "min_resolution": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "minItems": 2,
          "maxItems": 2
        },
        "keypoints_format": {
          "type": "string",
          "description": "e.g., openpose25, coco17"
        },
        "camera_view": {
          "type": "string",
          "description": "e.g., side, front, rear"
        },
        "preprocess": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Preprocessing steps to apply (e.g., align_orientation, normalize_lengths)."
        }
      }
    },
    "globals": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "time_tolerance_ms": {
          "type": "number",
          "minimum": 0
        },
        "angle_units": {
          "type": "string",
          "enum": ["degrees", "radians"]
        },
        "confidence_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "feature_pipeline": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Feature or metric extraction stages (e.g., compute_frechet, compute_relative_cg_z)."
        }
      }
    },
    "phase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "label"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_.-]+$"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "frame_range": {
          "$ref": "#/$defs/frame_range"
        },
        "event_window": {
          "$ref": "#/$defs/event_window"
        },
        "joints_of_interest": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "oneOf": [
        {
          "required": ["frame_range"]
        },
        {
          "required": ["event_window"]
        }
      ]
    },
    "frame_range": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 0
      },
      "minItems": 2,
      "maxItems": 2
    },
    "event_window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["event", "window_ms"],
      "properties": {
        "event": {
          "type": "string"
        },
        "window_ms": {
          "$ref": "#/$defs/window_ms"
        }
      }
    },
    "window_ms": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2
    },
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "label", "phase", "category", "severity", "signal", "conditions", "score"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_.-]+$"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "phase": {
          "type": "string",
          "description": "Reference to a phase id."
        },
        "category": {
          "type": "string"
        },
        "severity": {
          "$ref": "#/$defs/severity"
        },
        "applies_when": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "phase": {
              "type": "string"
            },
            "prereq_rules_passed": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "signal": {
          "$ref": "#/$defs/signal"
        },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/condition"
          }
        },
        "score": {
          "$ref": "#/$defs/score"
        },
        "feedback": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/feedback"
          }
        }
      }
    },
    "signal": {
      "type": "object",
      "oneOf": [
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "frame_range_ref"
            },
            "ref": {
              "type": "string",
              "description": "Reference to a phase id (e.g., phase:step2)."
            }
          },
          "required": ["type", "ref"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "event_window"
            },
            "event": {
              "type": "string"
            },
            "window_ms": {
              "$ref": "#/$defs/window_ms"
            },
            "default_phase": {
              "type": "string",
              "description": "Phase to fall back to when resolving frame ranges."
            }
          },
          "required": ["type", "event", "window_ms"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "direct"
            },
            "frame_range": {
              "$ref": "#/$defs/frame_range"
            },
            "joints": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "required": ["type", "frame_range"]
        }
      ]
    },
    "condition": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_.-]+$"
        },
        "type": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "threshold"
            },
            "metric": {
              "type": "string"
            },
            "op": {
              "enum": ["gte", "gt", "lte", "lt", "eq", "neq"]
            },
            "value": {
              "type": "number"
            },
            "tolerance": {
              "type": "number"
            },
            "abs_val": {
              "type": "boolean"
            }
          },
          "required": ["type", "metric", "op", "value"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "range"
            },
            "metric": {
              "type": "string"
            },
            "op": {
              "const": "between"
            },
            "value": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2
            },
            "tolerance": {
              "type": "number"
            },
            "abs_val": {
              "type": "boolean"
            }
          },
          "required": ["type", "metric", "op", "value"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "boolean"
            },
            "metric": {
              "type": "string"
            },
            "op": {
              "enum": ["is_true", "is_false"]
            }
          },
          "required": ["type", "metric", "op"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "event_exists"
            },
            "event": {
              "type": "string"
            },
            "window_ms": {
              "$ref": "#/$defs/window_ms"
            }
          },
          "required": ["type", "event"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "composite"
            },
            "logic": {
              "enum": ["all", "any", "none"]
            },
            "conditions": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "References to condition ids."
              },
              "minItems": 1
            }
          },
          "required": ["type", "logic", "conditions"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "trend"
            },
            "metric": {
              "type": "string"
            },
            "op": {
              "enum": ["increasing", "decreasing"]
            },
            "window_frames": {
              "type": "integer",
              "minimum": 1
            },
            "window_ms": {
              "$ref": "#/$defs/window_ms"
            }
          },
          "required": ["type", "metric", "op"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "angle"
            },
            "joints": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 2,
              "maxItems": 3
            },
            "reference": {
              "enum": ["global", "local"]
            },
            "op": {
              "enum": ["gte", "gt", "lte", "lt", "eq", "neq", "between"]
            },
            "value": {
              "oneOf": [
                {
                  "type": "number"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              ]
            },
            "tolerance": {
              "type": "number"
            }
          },
          "required": ["type", "joints", "op", "value"]
        },
        {
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_.-]+$"
            },
            "type": {
              "const": "distance"
            },
            "pair": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 2,
              "maxItems": 2
            },
            "metric": {
              "type": "string"
            },
            "op": {
              "enum": ["gte", "gt", "lte", "lt", "eq", "neq", "between"]
            },
            "value": {
              "oneOf": [
                {
                  "type": "number"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              ]
            },
            "tolerance": {
              "type": "number"
            }
          },
          "required": ["type", "pair", "op", "value"]
        }
      ]
    },
    "score": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "enum": ["weighted", "all-or-nothing", "average"]
        },
        "weights": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "number"
            }
          },
          "minProperties": 1
        },
        "pass_score": {
          "type": "number"
        },
        "max_score": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["mode", "pass_score", "max_score"],
      "allOf": [
        {
          "if": {
            "properties": {
              "mode": {
                "const": "weighted"
              }
            },
            "required": ["mode"]
          },
          "then": {
            "required": ["weights"]
          }
        }
      ]
    },
    "feedback": {
      "type": "object",
      "additionalProperties": false,
      "required": ["condition_ids", "message", "severity"],
      "properties": {
        "condition_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "$ref": "#/$defs/severity"
        },
        "attach_to_ts": {
          "type": "string",
          "pattern": "^(event:[A-Za-z0-9_.-]+|frame:[0-9]+)$"
        }
      }
    },
    "severity": {
      "type": "string",
      "enum": ["info", "warn", "fail"]
    }
  }
}
